{
  "name": "consultation-system",
  "version": "1.0.0",
  "description": "Система обработки заявок на консультацию с отправкой в Telegram",
  "main": "dist/server/index.js",
  "scripts": {
    "dev": "tsx watch server/index.ts",
    "start": "node dist/server/index.js",
    "start:ts": "tsx server/index.ts",
    "build": "tsc",
    "build:clean": "rm -rf dist && tsc",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs consultation-system",
    "pm2:status": "pm2 status",
    "deploy": "npm run build:clean && npm run pm2:restart",
    "test": "echo \"No tests specified\" && exit 0",
    "test-telegram": "tsx scripts/test-telegram.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "pm2": "^6.0.8",
    "tsx": "^4.20.3",
    "typescript": "^5.0.0"
  }
}

