# Конфигурация системы обработки заявок на консультацию

# Порт для сервера обработки заявок
CONSULTATION_PORT=3001

# Разрешенные домены для CORS (через запятую)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Telegram Bot Configuration
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ID чата администратора (можно получить у @userinfobot)
TELEGRAM_ADMIN_CHAT_ID=your_admin_chat_id_here

# Опционально: URL для webhook (если используется)
TELEGRAM_WEBHOOK_URL=

# Настройки логирования
LOG_LEVEL=info

# Директория для сохранения заявок
DATA_DIRECTORY=./src/consultation-system/data
